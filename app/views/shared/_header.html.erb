<nav class="header navbar navbar-expand-md align-items-center fixed-top border-bottom navbar-light box-shadow">
  <%= link_to 'TestGuru', root_path, class: 'navbar-brand' %>

  <div class="collapse navbar-collapse" id="navbarCollapse">
    <div class="mr-auto"></div>

    <form class="header__side form-inline mt-2 mt-md-0 ">
      <% if user_signed_in? %>
      
        <% if current_user.admin? %>
          <%= link_to admin_tests_path do %>
            <p>Admin</p>
          <% end %>
        <% end %>

        <span><%= welcome_message(current_user) %></span>
        <ul class="navbar-nav">
          <li class="nav-link">
            <%= link_to t('.exit'), destroy_user_session_path, method: :delete, class: ["btn", "nav-link"] %>
          </li>
        </ul>
      <% else %>
        <ul class="navbar-nav">
          <li class="nav-link">
            <%= link_to t('.sign_up'), new_user_registration_path, class: ["btn", "nav-link"] %>
          </li>
          <li class="nav-link">
            <%= link_to t('.sign_in'), new_user_session_path, class: ["btn", "nav-link"] %>
          </li>
        </ul>
      <% end %>
    </form>
  </div>
</nav>
