
<div class="row">
  <div class="form-promo col-sm-5">
  <%= form_with model: [:admin, @test], local: true do |form| %>

    <%= render 'shared/errors', resource: @test %>

    <div class="form-group row">
      <div class="col-sm-3">
        <%= form.label :title, :class => 'col-form-label' %>
      </div>

      <div class="col-sm-9">
        <%= form.text_field :title, :class => 'form-control' %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-sm-3">
        <%= form.label :level, :class => 'col-form-label' %>
      </div>

      <div class="col-sm-9">
        <%= form.number_field :level, :class => 'form-control' %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-sm-3">
        <%= form.label :category_id, :class => 'col-form-label' %>
      </div>

      <div class="col-sm-9">
        <%= form.collection_select :category_id, Category.all, :id, :title, prompt: true %>
      </div>
    </div>

    <div class="form-group">
      <%= form.submit :class => "btn btn-success" %>
    </div>
  <% end %>
  </div>
</div>